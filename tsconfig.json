{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*",
    "./app/**/*"
  ],

  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
